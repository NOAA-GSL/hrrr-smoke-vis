{
  "name": "hrrr-smoke-vis",
  "version": "0.1.0",
  "description": "Frontend for a web application that generates vertical cross-sections of smoke concentration from NOAA's HRRR model forecasts",
  "main": "src/server.js",
  "scripts": {
    "assets:fonts": "cpy --cwd=node_modules/uswds/dist/fonts --parents roboto-mono source-sans-pro ../../../../_site/fonts/",
    "build": "npm run-p assets:* build:*",
    "build:js": "rollup -c",
    "build:prerender": "node scripts/build",
    "build:styles": "sass src/styles:public/css --load-path=node_modules/uswds/dist/scss/ --color",
    "clean": "del public/",
    "cy:open": "cypress open",
    "dev": "run-p assets:* watch:*",
    "test": "run-p test:*",
    "test:format": "prettier --check src/**/*.js",
    "test:lint": "eslint src/**/*.js",
    "test:integration": "cypress run",
    "watch:js": "rollup -c -w",
    "watch:server": "sirv public --no-clear",
    "watch:styles": "npm run build:styles -- --watch --error-css"
  },
  "author": "Evan Sheehan <evan.sheehan@noaa.gov>",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.2",
    "cpy-cli": "^3.1.1",
    "cypress": "^7.6.0",
    "d3": "^6.7.0",
    "del-cli": "^4.0.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "ndjson-cli": "^0.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "rollup": "^2.53.2",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.35.1",
    "shapefile": "^0.6.6",
    "sirv-cli": "^1.0.12",
    "svelte": "^3.42.1",
    "topojson-client": "^3.1.0",
    "topojson-server": "^3.0.1",
    "topojson-simplify": "^3.0.3",
    "uswds": "^2.12.0"
  }
}
