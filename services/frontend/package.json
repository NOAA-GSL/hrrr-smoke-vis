{
  "name": "hrrr-smoke-vis",
  "version": "0.1.0",
  "description": "Frontend for a web application that generates vertical cross-sections of smoke concentration from NOAA's HRRR model forecasts",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "dev": "env-cmd nodemon src/server.js",
    "test": "run-p test:* cy:run",
    "test:format": "prettier --check src/**/*.js",
    "test:lint": "eslint src/**/*.js",
    "test:integration": "run-s dev cy:run"
  },
  "author": "Evan Sheehan <evan.sheehan@noaa.gov>",
  "dependencies": {
    "debug": "^4.3.1",
    "express": "^4.17.1",
    "nunjucks": "^3.2.3"
  },
  "devDependencies": {
    "cypress": "^7.5.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1"
  }
}
